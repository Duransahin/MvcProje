@model MVCProje.Models.Entity.TblSatıs
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Satış Yap</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Satış Yapma Ekranı</h3>
            </div>
            <form method="post" action="/Satıs/Satıs">
                <div class="modal-body">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(m => m.Urun, new { @class = "form-control" })
                    <label>Müşteri Adı Soyadı</label>
                    @Html.TextBoxFor(m => m.Musterı, new { @class = "form-control" })
                    <br />
                    <label>Ürün adedi</label>
                    @Html.TextBoxFor(m => m.Adet, new { @class = "form-control" })
                    <label>Ürün Fiyatı</label>
                    @Html.TextBoxFor(m => m.Fıyat, new { @class = "form-control" })
                    <br />
                    <button type="button" class="btn btn-primary">Verileri Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

