@model MVCProje.Models.Entity.TblUrunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post">
    <label> Ürün Adı</label>
    <input type="text" name="UrunAd" class="form-control" required="" />
    @*@Html.ValidationMessageFor(m => m.UrunAd, "", new { @class = "text-danger" })*@
    <label>Ürün Markası</label>
    <input type="text" name="Marka" class="form-control" required="" />
    <label>Ürün Kategori</label>
    @Html.DropDownListFor(m => m.UrunKategorı, (List<SelectListItem>)ViewBag.dgr, "Kategori Seçiniz", new { @class = "form-control" })
    <label>Ürün Fiyatı</label>
    <input type="text" name="Fıyat" class="form-control" required="" />
    <label>Ürün Stok Adedi</label>
    <input type="text" name="Stok" class="form-control" />
    <br />
    <button class="btn btn-primary"> Kaydet</button>
    <br />


</form>

