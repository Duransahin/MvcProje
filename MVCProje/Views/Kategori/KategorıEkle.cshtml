@model MVCProje.Models.Entity.TblKategorıler
@{
    ViewBag.Title = "KategorıEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Kategory Ekleme Sayfası</h2>

<form method="post">
    <div>
        <label>Kategori Adı</label>
        @Html.TextBoxFor(m=>m.KategorıAd, new { @class="form-control"})
        @Html.ValidationMessageFor(m=>m.KategorıAd,"",new {@style="color:red"})
    </div>
    <br />
    <button class="btn btn-primary">Kaydet</button>


</form>

