@*@using MVCProje.Models.Entity*@
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<MVCProje.Models.Entity.TblKategorıler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int count = 0;
}

<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.KategorıAd</td>
                <td><a href="/Kategori/DeleteKategorı/@item.KategorıId" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Kategori/KategorıUpdate/@item.KategorıId" class="btn btn-info">Güncelle</a> </td>

            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/KategorıEkle" class="btn btn-primary">Yeni Kategori Ekle</a>